{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020", "DOM"],
		"moduleResolution": "bundler",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"paths": {
			"lightweight-charts": ["../src/index"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}

